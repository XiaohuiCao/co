<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <include
        layout="@layout/content_main"
        android:id="@+id/main"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"/>

    <Button
        android:id="@+id/ipc2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@color/light_green"
        android:text="@string/ipc2"
        app:layout_constraintTop_toBottomOf="@+id/main"/>

    <Button
        android:id="@+id/view_event3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/ipc2"
        android:text="@string/view_event3"/>

    <Button
        android:id="@+id/view_principle4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/view_event3"
        android:text="@string/view_principle4"/>

    <Button
        android:id="@+id/view_remote5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/view_principle4"
        android:text="@string/view_remote5"/>

    <Button
        android:id="@+id/drawable6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/view_remote5"
        android:text="@string/drawable6"/>

    <Button
        android:id="@+id/animal7"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/drawable6"
        android:text="@string/animal7"/>

    <Button
        android:id="@+id/window8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/animal7"
        android:text="@string/window8"/>

    <Button
        android:id="@+id/bitmap12"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/window8"
        android:text="@string/bitmap12"/>

</androidx.constraintlayout.widget.ConstraintLayout>