<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ch.MainActivity">

    <Button
        android:id="@+id/co_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        android:text="@string/co_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/fo_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@+id/co_main"
        android:text="@string/fo_main"/>

    <Button
        android:id="@+id/radar_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@id/fo_main"
        android:text="雷达图"/>

    <Button
        android:id="@+id/wheel_pan_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="25dp"
        android:background="@color/light_green"
        app:layout_constraintTop_toBottomOf="@id/radar_main"
        android:text="方向盘"/>

</androidx.constraintlayout.widget.ConstraintLayout>