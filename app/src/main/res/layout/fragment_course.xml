<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/course_title_hin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:text="立项课程编号："
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/course_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toStartOf="@+id/course_title_hin"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_crime_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="课程立项时间"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_title"/>

    <Button
        android:id="@+id/crime_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_crime_date"/>

    <CheckBox
        android:id="@+id/course_complete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crime_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="complete"
        app:layout_constraintTop_toBottomOf="@+id/crime_date"
        app:layout_constraintStart_toEndOf="@id/course_complete"/>



</androidx.constraintlayout.widget.ConstraintLayout>