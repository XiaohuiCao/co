<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notify_icon"
        android:background="#000000"
        android:layout_width="40dp"
        android:scaleType="centerInside"
        android:layout_height="40dp" />

    <LinearLayout
        android:id="@+id/notify_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/custom_notification_msg_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:text="@string/custom_notification_msg" />

        <TextView
            android:id="@+id/custom_notification_msg_down"
            android:padding="2dp"
            android:background="@drawable/common_bkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/custom_notification_msg_down" />

    </LinearLayout>

</LinearLayout>
