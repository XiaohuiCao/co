<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBaseline_toTopOf="@android:color/black">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="图书名称："
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/et_bookname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_book_name">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="图书作者："
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/et_author"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_book_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_book_author">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="图书价格："
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/et_bookprice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_book_price">

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="图书ID："
        android:gravity="center"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/id_update"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="ID更新"
            android:layout_margin="10dp"
            android:background="@color/light_green"
            app:layout_constraintTop_toBottomOf="@+id/display"/>
    </LinearLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_id"/>

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新结果"
        android:gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/label"/>


</androidx.constraintlayout.widget.ConstraintLayout>